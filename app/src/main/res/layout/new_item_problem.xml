<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:background="@drawable/problem_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- for status-->
    <TextView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/m0"
        android:layout_centerInParent="true"
        android:theme="@style/NormalTextBlack"
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:text="@string/dummy_string"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="@dimen/sm"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>