<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView android:layout_height="match_parent" android:layout_width="match_parent"
    android:background="@drawable/intro_data_back"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".preferences.PreferencesActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDIT PREFERENCES"
            android:theme="@style/HeadingBlack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:text="@string/enter_your_email"
            android:theme="@style/NormalTextBlack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:text="@string/enter_your_nickname"
            android:theme="@style/NormalTextBlack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <LinearLayout
            android:layout_marginStart="@dimen/p2"
            android:layout_marginEnd="@dimen/p2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="92dp"
            android:background="@drawable/rounded_corners_transparent"
            android:elevation="@dimen/defaultElevation"
            android:orientation="vertical"
            android:padding="@dimen/p2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/p2"
                android:textSize="@dimen/xl" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/p2"
            android:layout_marginTop="244dp"
            android:layout_marginEnd="@dimen/p2"
            android:background="@drawable/rounded_corners_transparent"
            android:elevation="@dimen/defaultElevation"
            android:orientation="vertical"
            android:padding="@dimen/p2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/p2"
                android:textSize="@dimen/xl" />

        </LinearLayout>

        <Spinner
            android:id="@+id/introData_spinner"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="384dp"
            android:layout_marginStart="@dimen/m2"
            android:layout_marginEnd="@dimen/m2"
            android:background="@drawable/rounded_corners_transparent"
            android:backgroundTint="@color/backgroundOrange"
            android:elevation="@dimen/cardElevation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="360dp"
            android:text="@string/select_your_state"
            android:theme="@style/NormalTextBlack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>